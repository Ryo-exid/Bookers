<h1>Editing Book</h1>


<%= form_with model:@book, local:true do |f| %>
  <div class="field">
    <label>Title</label>
    <%= f.text_field :title %>
  </div>

  <div class="field">
    <label>Body</label>
    <%= f.text_area :body %>
    </br>
  </div>
  
  <div class="actions">
    <%= f.submit 'Update Book' %>
  </div>
<% end %>


<a><%= link_to "Show", book_path(@book.id) %></a> | <a><%= link_to "Back", :back %></a>